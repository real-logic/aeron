                 id="54"
                 description="Delete detached segments from a recording.">
        <field name="controlSessionId"     id="1" type="int64"/>
        <field name="correlationId"        id="2" type="int64"/>
        <field name="recordingId"          id="3" type="int64"/>
    </sbe:message>

